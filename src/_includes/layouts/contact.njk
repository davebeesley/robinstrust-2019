{% extends 'layouts/base.njk' %}
{% set pageType = 'Trust Board' %}

{# Intro content #}
{% set introHeading = title %}
{% set introSummary %}{{ content | safe }}{% endset %}

{% block content %}
  <main id="main-content" tabindex="-1">
    {% include "partials/components/intro.njk" %}
    <section class="[ pad-top-700 gap-bottom-900 ]">
      <div class="[ inner-wrapper ] [ sf-flow ]">
        <div class="boilerform">
          <form name="contact" netlify>
            <fieldset class="form">
              <div class="form__row">
                <label class="label">Name</label>
                <input type="text" name="name" autocapitalize="none" autocorrect="off" class="input-field" required />
              </div>
              <div class="form__row">
                <label class="label">Email</label>
                <input type="email" name="email" autocapitalize="none" autocorrect="off" class="input-field" required />
              </div>
              <div class="form__row">
                <label class="label">Message</label>
                <textarea name="message" class="input-field input-field--multiline" autocapitalize="none" autocorrect="off" required></textarea>
              </div>
              <div class="form__row">
                <button type="submit" class="button">Send</button>
              </div>
            </fieldset>
          </form>
        </div>
      </div>
    </section>
  </main>
{% endblock %}
