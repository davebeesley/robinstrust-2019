<a class="skip-link" href="#main-content">Skip to content</a>
<header role="banner" class="[ site-head ] [ pad-top-700 pad-bottom-700 ">
  <div class="wrapper">
    <span class="visually-hidden">{{ site.name }}: {{ pageType }}</span>
    <div class="[ site-head__inner ] [ md:box-flex space-between align-center ]">
      <a href="/" class="[ site-head__site-name ] [ leading-tight ]"{{ 'aria-current=page' if page.url == '/' | safe }}>
        <span class="visually-hidden">{{ 'Back to homepage' if page.url != '/' else 'Homepage' }}</span>
        <span class="[ site-head__site-name ] [ text-600 ]{% if site.siteLogo %} visually-hidden{% endif %}" aria-hidden="true">{{ site.name }}</span>
        {% if site.siteLogo %}
          <img src="{{ site.url }}{{ site.siteLogo }}" alt="{{ site.name }}" class="site-head__site-logo">
        {% endif %}
      </a>
      {% include "partials/components/nav.njk" %}
      {% if navigation.joinButton.url %}
        {% set joinButton = navigation.joinButton %}
        {% set externalAttribute = '' %}

        {% if joinButton.external %}
          {% set externalAttribute = ' rel="external"' %}
        {% endif %}
        <a href="{{ joinButton.url }}"{{ externalAttribute | safe }} class="button">{{ joinButton.text }}</a>
      {% endif %}
     </div>
  </div>
</header>
